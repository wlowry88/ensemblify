<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.full_name %>
</p>

<p>
  <strong>Gender:</strong>
  <%= @user.gender %>
</p>

<p>
  <%= image_tag @user.image %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>


<%= form_for(@user) do |f| %>
  <%= f.label :instrument %>
  <%= f.collection_select :instrument, @instrument_list, :to_s, :to_s %>
  <%= f.label :level %>
  <%= f.collection_select :level, ["beginner", "intermediate", "advanced", "professional"], :to_s, :to_s %>
  <%= f.label :zipcode %>
  <%= f.text_field :zipcode %>
  <%= f.label :phone_number %>
  <%= f.telephone_field :phone_number %>
  <%= f.label :short_bio %>
  <%= f.text_area :short_bio %>
  <%= f.fields_for :interests do |i| %>
    <%= i.label :instrumentation %>
    <%= i.collection_check_boxes :instrumentation, @ensemble_types, :id, :name %>
    <% end %>
  <%= f.submit %>
<% end %>

<p>
  <strong>Short bio:</strong>
  <%#= @user.short_bio %>
</p>


<p>
  <strong>Video sample:</strong>
  <%#= @user.video_sample %>
</p>

<p>
  <strong>Audio sample:</strong>
  <%#= @user.audio_sample %>
</p>

<p>
  <strong>Type preferences:</strong>
  <%#= @user.type_preferences %>
</p>

<p>
  <strong>Style preferences:</strong>
  <%#= @user.style_preferences %>
</p>

<p>
  <strong>Availability:</strong>
  <%#= @user.availability %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
