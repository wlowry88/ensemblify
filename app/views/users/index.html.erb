<h1>Musicians</h1>

<div class="wrapper">

  <button class="intelligent_musician_toggle">Show All Musicians</button>
  <% if current_user %>
    <div class="intelligent_matches">
      <table class="intelligent_matches">
        <h4>These musicians might be a good fit for your group</h4>
        <thead>
          <tr>
            <th>Name</th>
            <th>Instrument</th>
            <th>Level</th>
            <th>Ensemble Preferences</th>
            <th>Availability</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% current_user.musician_intelligent_match.each do |user| %>
            <tr>
              <td><%= user.full_name %></td>
              <td><%= user.instrument.name %></td>
              <td><%= user.level %></td>
              <td><%= user.interests.collect{|i|i.instrumentation.name}.join(", ") %></td>
              <td><%= user.available %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>

  <div class="all_matches">
    <%= form_for(User.new) do |f| %>
    <%= f.label :instrument_id %>
    <%= f.collection_select :instrument_id, @instrument_list, :name, :name, {prompt: ""} %>
    <%= f.label :available %>
    <%= f.collection_select :available, ["Seeking a group","All Set"], :to_s, :to_s, {prompt: ""} %>
    <%= f.label :instrumentation_ids, "Interests" %>
    <%= f.collection_select :instrumentation_ids, @ensemble_types, :name, :name, {prompt: ""} %>
    <%= f.label :level %>
    <%= f.collection_select :level, ["beginner", "intermediate", "advanced", "professional"], :to_s, :to_s, {prompt: ""} %>
    <%= f.submit "Search", class:"search_button" %>
    <button class="clear_fields">Clear Fields</button>
    <% end %>

    <table class="all_matches">
      <h4>Showing all musicians</h4>
      <thead>
        <tr>
          <th>Name</th>
          <th>Instrument</th>
          <th>Level</th>
          <th>Ensemble Preferences</th>
          <th>Availability</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <% if current_user != user && user.check_for_instrument_and_zipcode %>
            <tr>
              <td class="name_field"><%= user.full_name %></td>
              <td class="instrument_field"><%= user.instrument.name %></td>
              <td class="level_field"><%= user.level %></td>
              <td class="interests_field"><%= user.interests.collect{|i|i.instrumentation.name}.uniq.join(", ") %></td>
              <td class="available_field"><%= user.available %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>